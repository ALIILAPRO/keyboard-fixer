{
    "manifest_version": 3,
    "name": "تبدیل به فارسی",
    "version": "1.0",
    "description": "اصلاح کیبورد و تبدیل تایپ انگلیسی به فارسی",
    "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      }
    },
    "permissions": ["storage", "activeTab"]
  }